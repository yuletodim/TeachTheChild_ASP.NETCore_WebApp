@model DownloadsPagingViewModel

@{
    ViewData["Title"] = "Download Materials";
    // Class disbaled added in site.css
    var previouseDisbaled = Model.CurrentPage == 1 ? "disabled" : string.Empty;
    var nextDisbaled = Model.CurrentPage == Model.PagesCount ? "disabled" : string.Empty;
}

<div class="row">
    @await Html.PartialAsync("_TipsPartial", WebConstants.ViewDownloadsTip)
</div>

<div class="row">
    <div class="box">
        <div class="col-md-12 h-title">
            <div class="col-md-8">
                <h2>@ViewData["Title"]</h2>
            </div>

            <div class="col-md-4 text-right">
                <ul class="pagination">
                    <li class="page-item @previouseDisbaled">
                        <a class="page-link @previouseDisbaled" href="/downloads?page=@Model.PreviousePage" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Previous</span>
                        </a>
                    </li>
                    @for (int i = 1; i <= Model.PagesCount; i++)
                    {
                        var activeState = Model.CurrentPage == i ? "active" : string.Empty;
                        <li class="page-item @activeState"><a class="page-link" href="/downloads?page=@i">@i</a></li>
                    }
                    <li class="page-item @nextDisbaled">
                        <a class="page-link @nextDisbaled" href="/downloads?page=@Model.NextPage" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Next</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        @foreach (var item in Model.Downloads)
        {
            <div class="col-md-4 text-center">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <a href="javascript:;" class="view-picture" data-id="@item.Id">
                            <img src="@item.PictureUrl" class="img-responsive download-picture-small" data-id="@item.Id" />
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


@section Scripts{ 
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootbox.js/4.4.0/bootbox.min.js"></script>
    <script src="~/js/global/downloads-details.js"></script>
}
