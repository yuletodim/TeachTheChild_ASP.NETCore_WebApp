@using Microsoft.AspNetCore.Identity
@using TeachTheChild.Web.Models

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li class="dropdown" id="nav-profile">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                    @UserManager.GetUserName(User)
                    <span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
                    <li>
                        <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">Profile</a>
                    </li>
                    <li>
                        <button type="submit" class="btn btn-link navbar-btn">Log out</button>
                    </li>
                </ul>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li id="nav-register"><a asp-area="" asp-controller="Account" asp-action="Register">Register</a></li>
        <li id="nav-login"><a asp-area="" asp-controller="Account" asp-action="Login">Log in</a></li>
    </ul>
}
