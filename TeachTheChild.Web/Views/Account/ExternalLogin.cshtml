@model ExternalLoginViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="row">
    <div class="col-md-4 align-to-logo">
        <div class="box ">
            <h4>Associate your @ViewData["LoginProvider"] account.</h4>
            <hr />

            <p class="text-info">
                You've successfully authenticated with <strong>@ViewData["LoginProvider"]</strong>.
                Please enter an email address for this site below and click the button to finish
                logging in.
            </p>
            <form asp-action="ExternalLoginConfirmation" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-default">Login</button>
            </form>
        </div>
    </div>

    <div class="col-md-5 col-md-offset-2 ">
        @await Html.PartialAsync("_TipsPartial", WebConstants.ExternalLoginTips)
    </div>
</div>



@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

