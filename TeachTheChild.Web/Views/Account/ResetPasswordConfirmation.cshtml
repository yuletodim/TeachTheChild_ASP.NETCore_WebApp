@{
    ViewData["Title"] = "Reset password confirmation";
}

<div class="row">
    <div class="col-md-4 align-to-logo">
        <div class="box ">
            <h2>@ViewData["Title"]</h2>
            <p>
                Your password has been reset. Please <a asp-action="Login">click here to log in</a>.
            </p>
        </div>
    </div>
    <div class="col-md-5 text-center col-md-offset-2 ">
        <div class="box">
            <div class="tips">
                <img src="~/images/account/MrCool.jpg" alt="MrHappyPic" class="img-responsive" />
            </div>
        </div>
    </div>
</div>