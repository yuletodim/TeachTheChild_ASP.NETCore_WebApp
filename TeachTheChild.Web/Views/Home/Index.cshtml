@model HomeIndexViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="box">
        <div class="col-md-12 text-center">
            <div id="carousel-example-generic" class="carousel slide" data-ride="carousel" data-interval="2000">
                <!-- Indicators -->
                <ol class="carousel-indicators hidden-xs">
                    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                    <li data-target="#carousel-example-generic" data-slide-to="2"></li>
                </ol>
                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                    <div class="item active">
                        <img class="img-responsive img-full" src="~/images/slider/bg1.jpg" alt="">
                    </div>
                    <div class="item">
                        <img class="img-responsive img-full" src="~/images/slider/bg2.jpg" alt="">
                    </div>
                    <div class="item">
                        <img class="img-responsive img-full" src="~/images/slider/bg3.jpg" alt="">
                    </div>
                </div>
                <!-- Controls -->
                <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                    <span class="icon-prev"></span>
                </a>
                <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                    <span class="icon-next"></span>
                </a>
            </div>
            <h2 class="brand-before">
                <small>Welcome to</small>
            </h2>
            <h1 class="brand-name">Teach The Child</h1>
            <hr class="tagline-divider">
            <h2>
                <small>
                    a place for <strong>Parents & Kids Activities</strong>
                </small>
            </h2>
        </div>
    </div>
</div>

<div class="row">
    @await Html.PartialAsync("_TipsPartial", WebConstants.IndexTip)
</div>

<div class="row">
    <div class="box">
        <div class="col-md-12">
            <h3 class="h-title">You can find funny videos with different message</h3>
        </div>

        <div class="col-md-5 col-sm-12 col-md-offset-1 ">
            @await  Html.PartialAsync("/Views/Videos/_VideoPlayerPartial.cshtml", Model.Video)
        </div>

        <div class="col-md-5 text-center">
            <div class="box text-center">
                <div class="tips">
                    <img src="~/images/MrFunny.png" alt="MrForgetfulPic" class="img-responsive" />
                </div>
            </div>
        </div>
        
        <div class="col-md-12 text-right">
            <p>Log in to <a asp-controller="Videos" asp-action="Index" class="btn btn-primary">View more</a></p>
        </div>
    </div>
</div>

<div class="row">
    @await Html.PartialAsync("_TipsPartial", WebConstants.ViewDownloadsTip)
</div>


<div class="row">
    <div class="box">
        <div class="col-md-12">
            <h3 class="h-title">Interesting books recommended by professional pedagogists</h3>
        </div>

        @foreach (var item in Model.Books)
        {
            @await Html.PartialAsync("/Views/Books/_BookPartial.cshtml", item)
        }
        <div class="col-md-12 text-right">
            <p>Log in to <a asp-controller="Books" asp-action="Index" class="btn btn-primary">View more</a></p>
        </div>
    </div>
</div>



<div class="row">
    <div class="box">
        <div class="col-md-12">
            <h3 class="h-title">Articles written by our professional team</h3>
        </div>



        @foreach (var item in Model.Articles)
        {
            @await Html.PartialAsync("/Views/Articles/_ArticlePartial.cshtml", item)
        }

        <div class="col-md-12 text-right">
            <p>Log in to <a asp-controller="Articles" asp-action="Index" class="btn btn-primary">View more</a></p>
        </div>
    </div>
</div>

<div class="row">
    <div class="box">
        <div class="col-md-12">
            <h3 class="h-title">Here you can find materials to download</h3>
        </div>

        @foreach (var item in Model.Downloads)
        {
            @await Html.PartialAsync("/Views/Downloads/_DownloadPartial.cshtml", item)
        }

        <div class="col-md-12 text-right">
            <p>Log into <a asp-controller="Downloads" asp-action="Index" class="btn btn-primary">View more</a></p>
        </div>

    </div>
</div>

<div class="row">
    <div class="box">
        <div class="col-md-4 text-center col-md-offset-4 ">
            <div class="tips">
                <img src="~/images/MisFun.png" alt="MrForgetfulPic" class="img-responsive" />
            </div>
        </div>
    </div>
</div>
